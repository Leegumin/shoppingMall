<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace = "com.example.dongsungsi.dao.FAQBoardDao">

    <!--*id 번호로 회원 찾기-->
    <select id = "findById"
            parameterType = "long"
            resultType = "com.example.dongsungsi.model.FAQBoard">
        SELECT ID
             , TITLE
             , CONTENT
             , DELETE_YN
             , INSERT_TIME
             , UPDATE_TIME
             , DELETE_TIME
        FROM TB_FAQ
        WHERE DELETE_YN = 'N'
          AND ID = #{id}
    </select>

    <!--Todo : 아래 수정, findByTitleContaining, findAll, selectTotalCount-->
    <!--*이메일로 게시글 찾기-->
    <select id = "findByTitleContaining"
            parameterType = "com.example.dongsungsi.paging.Criteria"
            resultType = "com.example.dongsungsi.model.FAQBoard">
            SELECT
                *
            FROM
                (
                    SELECT
                        ROWNUM R
                       ,TF.*
                    FROM
                        TB_FAQ TF
                    WHERE
                            TF.DELETE_YN = 'N'
        <!--제목검색이 있으면 검색어로 검색-->AND TITLE LIKE '%' || #{title} || '%'
        <!--1 * 3 : 현재페이지번호 + 1, * , 페이지당 데이터 건수 3-->
        <!--종료 조건-->AND ROWNUM &lt;= (#{page} + 1 ) * #{size}
                )
        <!--(현재 페이지 번호) * (페이지당 데이터 건수)-->
        <!--시작조건-->WHERE
                R > #{page} * #{size}
    </select>

    <!--*회원 전부 찾기-->
    <select id = "findAll"
            parameterType = "com.example.dongsungsi.paging.Criteria"
            resultType = "com.example.dongsungsi.model.FAQBoard">
            SELECT
                *
            FROM
                (
                    SELECT
                        ROWNUM R
                       ,TF.*
                    FROM
                        TB_FAQ TF
                    WHERE
                            TF.DELETE_YN = 'N'
        <!--1 * 3 : 현재페이지번호 + 1, * , 페이지당 데이터 건수 3-->
        <!--종료 조건-->AND ROWNUM &lt;= (#{page} + 1 ) * #{size}
                )
        <!--(현재 페이지 번호) * (페이지당 데이터 건수)-->
        <!--시작조건-->WHERE
                R > #{page} * #{size}
    </select>

    <!--*게시글 개수 세기-->
    <select id = "selectTotalCount"
            parameterType = "String"
            resultType = "int">
            SELECT COUNT(*)
            FROM TB_FAQ
            WHERE DELETE_YN = 'N'
              AND TITLE LIKE '%' || #{title} || '%'
    </select>

    <!--*Create, insertTutorial 메소드에 값이 정상적으로 들어가면 그 값을 받아 쿼리문을 실행함-->
    <insert id = "insertFAQBoard"
            parameterType = "com.example.dongsungsi.model.FAQBoard">
        INSERT INTO TB_FAQ(ID
                            ,TITLE
                            ,CONTENT
                            ,INSERT_TIME)
        VALUES (SQ_FAQ.NEXTVAL,
                #{title},
                #{content},
                TO_CHAR(SYSDATE, 'YYYY-MM-DD HH24:MI:SS'))

        <!--생성된 id 값을 model의 FAQBoard로 리턴해줌, 안해주면 id값 null 상태-->
        <selectKey keyProperty = "id"
                   resultType = "long"
                   order = "AFTER">
            SELECT SQ_FAQ.CURRVAL FROM DUAL
        </selectKey>
    </insert>

    <!--*Update-->
    <update id = "updateFAQBoard"
            parameterType = "com.example.dongsungsi.model.FAQBoard">
        UPDATE TB_FAQ
        SET TITLE       = #{title},
            CONTENT     = #{content},
            UPDATE_TIME = TO_CHAR(SYSDATE, 'YYYY-MM-DD HH24:MI:SS')
        WHERE ID = #{id}
    </update>

    <!--*Delete-->
    <update id = "deleteFAQBoard"
            parameterType = "long">
        UPDATE TB_FAQ
        SET DELETE_YN   = 'Y',
            DELETE_TIME = TO_CHAR(SYSDATE, 'YYYY-MM-DD HH24:MI:SS')
        WHERE ID = #{id}
    </update>

    <!--*DeleteAll-->
    <update id = "deleteAll">
        UPDATE TB_FAQ
        SET DELETE_YN   = 'Y',
            DELETE_TIME = TO_CHAR(SYSDATE, 'YYYY-MM-DD HH24:MI:SS')
    </update>

</mapper>











