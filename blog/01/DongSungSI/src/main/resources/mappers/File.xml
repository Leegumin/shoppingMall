<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace = "com.example.dongsungsi.dao.FileDBDao">

    <!--id로 찾는 메소드 쿼리-->
    <select id = "findById"
            parameterType = "String"
            resultType = "com.example.dongsungsi.model.FileDB">
        SELECT ID,
               NAME,
               TYPE,
               DATA
        FROM TB_FILES
        WHERE ID = #{id}
    </select>

    <!--모든 이미지 목록을 찾는 메소드 쿼리-->
    <select id = "findAll"
            resultType = "com.example.dongsungsi.model.FileDB">
        SELECT ID,
               NAME,
               TYPE,
               DATA
        FROM TB_FILES
    </select>

    <!--업로드 이미지 저장 메소드 쿼리-->
    <insert id = "save"
            parameterType = "com.example.dongsungsi.model.FileDB">
        INSERT INTO TB_FILES(ID,
                             NAME,
                             TYPE,
                             DATA)
        VALUES (SQ_FILES.NEXTVAL,
                #{name},
                #{type},
                #{data})
    </insert>
</mapper>











